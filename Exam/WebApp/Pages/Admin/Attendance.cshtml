@page
@model WebApp.Pages.Admin.AttendanceModel
@{
    ViewData["Title"] = "Mark Attendance";
}

<h1>Mark Attendance</h1>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Class/Date Selection -->
<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0">Select Class and Date</h5>
    </div>
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-5">
                <label asp-for="SelectedClassId" class="form-label">Class</label>
                <select asp-for="SelectedClassId" class="form-select">
                    <option value="">-- Select Class --</option>
                    @foreach (var classGroup in Model.Classes.GroupBy(c => c.DayOfWeek).OrderBy(g => g.Key == DayOfWeek.Sunday ? 7 : (int)g.Key))
                    {
                        <optgroup label="@classGroup.Key">
                            @foreach (var danceClass in classGroup.OrderBy(c => c.StartTime))
                            {
                                <option value="@danceClass.Id">
                                    @danceClass.StartTime.ToString(@"hh\:mm") - @danceClass.DanceStyle.Name (@danceClass.Level) - @danceClass.InstructorName
                                </option>
                            }
                        </optgroup>
                    }
                </select>
            </div>
            <div class="col-md-4">
                <label asp-for="SelectedDate" class="form-label">Date</label>
                <input asp-for="SelectedDate" type="date" class="form-control" />
            </div>
            <div class="col-md-3 d-flex align-items-end">
                <button type="submit" class="btn btn-primary">Load Bookings</button>
            </div>
        </form>
    </div>
</div>

@if (Model.SelectedClass != null && Model.Bookings.Any())
{
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                @Model.SelectedClass.DanceStyle.Name - @Model.SelectedClass.Level
                <span class="float-end">@Model.SelectedDate?.ToString("dddd, MMMM dd, yyyy")</span>
            </h5>
        </div>
        <div class="card-body">
            <p>
                <strong>Instructor:</strong> @Model.SelectedClass.InstructorName |
                <strong>Studio:</strong> @Model.SelectedClass.Studio.Name |
                <strong>Time:</strong> @Model.SelectedClass.StartTime.ToString(@"hh\:mm") - @Model.SelectedClass.EndTime.ToString(@"hh\:mm")
            </p>

            <form method="post">
                <input type="hidden" asp-for="SelectedClassId" />
                <input type="hidden" asp-for="SelectedDate" />

                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Student</th>
                                <th>Email</th>
                                <th>Booking Type</th>
                                <th>Attendance</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Bookings.Count; i++)
                            {
                                var booking = Model.Bookings[i];
                                <tr>
                                    <td>
                                        @booking.Student.FullName
                                        @if (booking.InvitedByStudent != null)
                                        {
                                            <br /><small class="text-muted">Invited by @booking.InvitedByStudent.FullName</small>
                                        }
                                    </td>
                                    <td>@booking.Student.Email</td>
                                    <td>
                                        @if (booking.IsTrial)
                                        {
                                            <span class="badge bg-info">Trial</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Regular</span>
                                        }
                                    </td>
                                    <td>
                                        <input type="hidden" name="BookingIds[@i]" value="@booking.Id" />
                                        <div class="btn-group" role="group">
                                            <input type="radio" class="btn-check" name="AttendanceStatus[@i]"
                                                   id="present_@booking.Id" value="true"
                                                   @(booking.Attended == true ? "checked" : "")>
                                            <label class="btn btn-outline-success" for="present_@booking.Id">Present</label>

                                            <input type="radio" class="btn-check" name="AttendanceStatus[@i]"
                                                   id="absent_@booking.Id" value="false"
                                                   @(booking.Attended == false ? "checked" : "")>
                                            <label class="btn btn-outline-danger" for="absent_@booking.Id">Absent</label>

                                            <input type="radio" class="btn-check" name="AttendanceStatus[@i]"
                                                   id="pending_@booking.Id" value=""
                                                   @(booking.Attended == null ? "checked" : "")>
                                            <label class="btn btn-outline-secondary" for="pending_@booking.Id">Pending</label>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-3">
                    <div>
                        <strong>Total:</strong> @Model.Bookings.Count students |
                        <span class="text-success">Present: @Model.Bookings.Count(b => b.Attended == true)</span> |
                        <span class="text-danger">Absent: @Model.Bookings.Count(b => b.Attended == false)</span> |
                        <span class="text-muted">Pending: @Model.Bookings.Count(b => b.Attended == null)</span>
                    </div>
                    <button type="submit" class="btn btn-primary">Save Attendance</button>
                </div>
            </form>
        </div>
    </div>
}
else if (Model.SelectedClassId.HasValue && Model.SelectedDate.HasValue)
{
    <div class="alert alert-info">
        No bookings found for this class on the selected date.
    </div>
}
