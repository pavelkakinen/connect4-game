@page
@model WebApp.Pages.Admin.DanceStyles.IndexModel
@{
    ViewData["Title"] = "Dance Styles";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Dance Styles</h1>
    <a asp-page="Create" class="btn btn-success">Add Style</a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th style="width: 30%;">Name</th>
                        <th style="width: 45%;">Description</th>
                        <th style="width: 10%;" class="text-center">Classes</th>
                        <th style="width: 15%;"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var style in Model.DanceStyles)
                    {
                        <tr>
                            <td><strong>@style.Name</strong></td>
                            <td>
                                @if (!string.IsNullOrEmpty(style.Description))
                                {
                                    <span class="text-muted">@style.Description</span>
                                }
                                else
                                {
                                    <span class="text-muted fst-italic">No description</span>
                                }
                            </td>
                            <td class="text-center">
                                @if (style.ClassCount > 0)
                                {
                                    <span class="badge bg-primary">@style.ClassCount</span>
                                }
                                else
                                {
                                    <span class="text-muted">0</span>
                                }
                            </td>
                            <td class="text-end">
                                <a asp-page="Edit" asp-route-id="@style.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                                @if (style.CanDelete)
                                {
                                    <form method="post" asp-page-handler="Delete" asp-route-id="@style.Id"
                                          onsubmit="return confirm('Are you sure you want to delete @style.Name?');"
                                          style="display:inline;">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                    </form>
                                }
                                else
                                {
                                    <button type="button" class="btn btn-sm btn-outline-secondary" disabled
                                            title="Cannot delete - style is in use">Delete</button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@if (!Model.DanceStyles.Any())
{
    <div class="alert alert-info mt-3">
        No dance styles found. Click "Add Style" to create one.
    </div>
}
