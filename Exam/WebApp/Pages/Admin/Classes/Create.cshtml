@page
@model WebApp.Pages.Admin.Classes.CreateModel
@{
    ViewData["Title"] = "Create Class";
}

<h1>Create New Class</h1>

<div class="row">
    <div class="col-md-8">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Class Details</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.DanceStyleId" class="form-label"></label>
                            <select asp-for="Input.DanceStyleId" asp-items="Model.StyleOptions" class="form-select">
                                <option value="">-- Select Style --</option>
                            </select>
                            <span asp-validation-for="Input.DanceStyleId" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.Level" class="form-label"></label>
                            <select asp-for="Input.Level" asp-items="Model.LevelOptions" class="form-select">
                                <option value="">-- Select Level --</option>
                            </select>
                            <span asp-validation-for="Input.Level" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.InstructorName" class="form-label"></label>
                        <input asp-for="Input.InstructorName" class="form-control" />
                        <span asp-validation-for="Input.InstructorName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.StudioId" class="form-label"></label>
                        <select asp-for="Input.StudioId" asp-items="Model.StudioOptions" class="form-select">
                            <option value="">-- Select Studio --</option>
                        </select>
                        <span asp-validation-for="Input.StudioId" class="text-danger"></span>
                        <small class="text-muted">
                            Studio C: Pole Fitness only | Studio D: Aerial Silks only
                        </small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.MaxStudents" class="form-label"></label>
                        <input asp-for="Input.MaxStudents" class="form-control" type="number" min="1" max="50" />
                        <span asp-validation-for="Input.MaxStudents" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Schedule</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <strong>Class Hours:</strong> Mon-Sat 18:00-21:00 | Sunday 10:00-14:00
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="Input.DayOfWeek" class="form-label"></label>
                            <select asp-for="Input.DayOfWeek" asp-items="Model.DayOptions" class="form-select">
                                <option value="">-- Select Day --</option>
                            </select>
                            <span asp-validation-for="Input.DayOfWeek" class="text-danger"></span>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label asp-for="Input.StartTime" class="form-label"></label>
                            <input asp-for="Input.StartTime" class="form-control" type="time" />
                            <span asp-validation-for="Input.StartTime" class="text-danger"></span>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label asp-for="Input.EndTime" class="form-label"></label>
                            <input asp-for="Input.EndTime" class="form-control" type="time" />
                            <span asp-validation-for="Input.EndTime" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-success">Create Class</button>
                <a asp-page="Index" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Studio Info</h5>
            </div>
            <div class="card-body">
                @foreach (var studio in Model.Studios)
                {
                    <div class="mb-3">
                        <strong>@studio.Name</strong> (@studio.SizeSquareMeters mÂ²)
                        <br />
                        <small class="text-muted">Max capacity: @studio.MaxCapacity</small>
                        @if (studio.HasPoles)
                        {
                            <br /><span class="badge bg-warning text-dark">Pole Fitness Only</span>
                        }
                        @if (studio.HasAerialRigging)
                        {
                            <br /><span class="badge bg-warning text-dark">Aerial Silks Only</span>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
