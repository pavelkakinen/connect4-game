@page
@model WebApp.Pages.Admin.Studios.IndexModel
@{
    ViewData["Title"] = "Studios";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Studios</h1>
    <a asp-page="Create" class="btn btn-success">Add Studio</a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th style="width: 15%;">Name</th>
                        <th style="width: 25%;">Description</th>
                        <th style="width: 10%;" class="text-center">Size</th>
                        <th style="width: 10%;" class="text-center">Capacity</th>
                        <th style="width: 15%;">Features</th>
                        <th style="width: 10%;" class="text-center">Classes</th>
                        <th style="width: 15%;"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var studio in Model.Studios)
                    {
                        <tr>
                            <td><strong>@studio.Name</strong></td>
                            <td>
                                @if (!string.IsNullOrEmpty(studio.Description))
                                {
                                    <span class="text-muted">@studio.Description</span>
                                }
                                else
                                {
                                    <span class="text-muted fst-italic">No description</span>
                                }
                            </td>
                            <td class="text-center">@studio.SizeSquareMeters mÂ²</td>
                            <td class="text-center">@studio.MaxCapacity</td>
                            <td>
                                @if (studio.HasPoles)
                                {
                                    <span class="badge bg-warning text-dark me-1">Poles</span>
                                }
                                @if (studio.HasAerialRigging)
                                {
                                    <span class="badge bg-info me-1">Aerial</span>
                                }
                                @if (!studio.HasPoles && !studio.HasAerialRigging)
                                {
                                    <span class="text-muted">Standard</span>
                                }
                            </td>
                            <td class="text-center">
                                @if (studio.ClassCount > 0)
                                {
                                    <span class="badge bg-primary">@studio.ClassCount</span>
                                }
                                else
                                {
                                    <span class="text-muted">0</span>
                                }
                            </td>
                            <td class="text-end">
                                <a asp-page="Edit" asp-route-id="@studio.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                                @if (studio.CanDelete)
                                {
                                    <form method="post" asp-page-handler="Delete" asp-route-id="@studio.Id"
                                          onsubmit="return confirm('Are you sure you want to delete @studio.Name?');"
                                          style="display:inline;">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                    </form>
                                }
                                else
                                {
                                    <button type="button" class="btn btn-sm btn-outline-secondary" disabled
                                            title="Cannot delete - studio has scheduled classes">Delete</button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@if (!Model.Studios.Any())
{
    <div class="alert alert-info mt-3">
        No studios found. Click "Add Studio" to create one.
    </div>
}
