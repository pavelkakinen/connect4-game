@page
@model WebApp.Pages.Students.IndexModel
@{
    ViewData["Title"] = "Students";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Students</h1>
    <a asp-page="Create" class="btn btn-primary">Add Student</a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Search and Filter -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-5">
                <label asp-for="SearchName" class="form-label">Search by Name or Email</label>
                <input asp-for="SearchName" class="form-control" placeholder="Enter name or email..." />
            </div>
            <div class="col-md-4">
                <label asp-for="PackageStatusFilter" class="form-label">Package Status</label>
                <select asp-for="PackageStatusFilter" asp-items="Model.PackageStatusOptions" class="form-select"></select>
            </div>
            <div class="col-md-3 d-flex align-items-end">
                <button type="submit" class="btn btn-primary me-2">Search</button>
                <a asp-page="Index" class="btn btn-outline-secondary">Clear</a>
            </div>
        </form>
    </div>
</div>

<!-- Students Table -->
<div class="card">
    <div class="card-body p-0">
        @if (!Model.Students.Any())
        {
            <div class="p-4 text-center text-muted">
                <p class="mb-0">No students found matching your criteria.</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Package</th>
                            <th>Status</th>
                            <th>Attendance</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var vm in Model.Students)
                        {
                            <tr style="cursor: pointer;" onclick="window.location='@Url.Page("Details", new { id = vm.Student.Id })'">
                                <td>
                                    <strong>@vm.Student.FullName</strong>
                                </td>
                                <td>@vm.Student.Email</td>
                                <td>@(vm.Student.Phone ?? "-")</td>
                                <td>@Model.GetPackageInfo(vm)</td>
                                <td>@Html.Raw(Model.GetPackageStatusBadge(vm))</td>
                                <td>
                                    @if (vm.AttendanceRate > 0)
                                    {
                                        <span class="@(vm.AttendanceRate >= 80 ? "text-success" : vm.AttendanceRate >= 50 ? "text-warning" : "text-danger")">
                                            @vm.AttendanceRate.ToString("F0")%
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    <a asp-page="Details" asp-route-id="@vm.Student.Id" class="btn btn-sm btn-outline-primary" onclick="event.stopPropagation();">
                                        View
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
    <div class="card-footer text-muted">
        Total: @Model.Students.Count student(s)
    </div>
</div>
