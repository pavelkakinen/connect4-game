@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<header class="logo-banner" role="banner">
    <span class="logo-symbol logo-red" aria-hidden="true">🔴</span>
    <h1>
        <span class="logo-banner-title">CONNECT</span><span class="logo-symbol logo-x">X</span>
    </h1>
    <span class="logo-symbol logo-blue" aria-hidden="true">🔵</span>
</header>

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12 text-center">
            <a asp-page="./NewGame" class="btn btn-primary btn-lg">
                🎮 Start New Game
            </a>
        </div>
    </div>
    
    @if (Model.SavedGames.Any())
    {
        <div class="row">
            <div class="col-12">
                <h2>Saved Games</h2>
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Game ID</th>
                            <th>Description</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var game in Model.SavedGames)
                        {
                            <tr>
                                <td>
                                    <code>@game.Id</code>
                                </td>
                                <td>@game.Description</td>
                                <td>
                                    @if (game.IsFinished)
                                    {
                                        <span class="badge bg-secondary">✓ Finished</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">⏸ In Progress</span>
                                    }
                                </td>
                                <td>
                                    @if (game.IsFinished)
                                    {
                                        <a asp-page="./GamePlay" asp-route-gameId="@game.Id" class="btn btn-sm btn-info">
                                            👁️ View
                                        </a>
                                    }
                                    else
                                    {
                                        <a asp-page="./GamePlay" asp-route-gameId="@game.Id" class="btn btn-sm btn-success">
                                            ▶️ Continue
                                        </a>
                                    }
                                    
                                    <button type="button" class="btn btn-sm btn-danger" 
                                            onclick="showDeleteModal('@game.Id', '@game.Description')">
                                        🗑️ Delete
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="alert alert-info text-center">
                    <h4>No saved games yet!</h4>
                    <p>Start a new game to begin playing ConnectX</p>
                </div>
            </div>
        </div>
    }
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">🗑️ Delete Game</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p><strong>Are you sure you want to delete this game?</strong></p>
                <p id="deleteGameInfo" class="text-muted"></p>
                <p class="text-danger">⚠️ This action cannot be undone!</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form method="post" asp-page-handler="Delete" id="deleteForm" style="display: inline;">
                    <input type="hidden" name="gameId" id="deleteGameId" />
                    <button type="submit" class="btn btn-danger">
                        🗑️ Yes, Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function showDeleteModal(gameId, description) {
        document.getElementById('deleteGameId').value = gameId;
        document.getElementById('deleteGameInfo').textContent = description;
        
        var modal = new bootstrap.Modal(document.getElementById('deleteModal'));
        modal.show();
    }
</script>