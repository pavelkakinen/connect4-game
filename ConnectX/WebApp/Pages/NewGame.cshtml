@page
@model WebApp.Pages.NewGame
@{
    ViewData["Title"] = "New Game";
}

<h1>üéÆ Start a New Game</h1>

<form method="post">
    <div class="row">
        <div class="col-md-6">
            <h3>Game Configuration</h3>
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-4">
                <label asp-for="ConfigId" class="control-label">Choose Configuration</label>
                <select asp-for="ConfigId" class="form-select form-select-lg" asp-items="Model.ConfigurationSelectList">
                    <option value="">-- Select Configuration --</option>
                </select>
                <span asp-validation-for="ConfigId" class="text-danger"></span>
            </div>
            
            <div class="alert alert-info">
                <strong>‚ÑπÔ∏è Configuration Details:</strong>
                <ul class="mb-0 mt-2">
                    <li><strong>Classic Connect 4:</strong> Standard 7√ó6 board, connect 4 in a row</li>
                    <li><strong>Connect 3:</strong> Smaller 5√ó4 board, connect 3 in a row (faster games)</li>
                    <li><strong>Connect 5:</strong> Larger 9√ó7 board, connect 5 in a row (longer games)</li>
                    <li><strong>Cylinder:</strong> 7√ó6 board with wrap-around edges</li>
                </ul>
            </div>
        </div>
        
        <div class="col-md-6">
            <h3>Players</h3>
            
            <div class="card mb-3 border-danger player-card">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">üî¥ Player 1 (Red)</h5>
                </div>
                <div class="card-body">
                    <div class="form-group mb-3">
                        <label asp-for="Player1Name" class="control-label">Name</label>
                        <input asp-for="Player1Name" class="form-control" placeholder="Enter player 1 name" />
                        <span asp-validation-for="Player1Name" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mb-0">
                        <label asp-for="P1Type" class="control-label">Player Type</label>
                        <select asp-for="P1Type" class="form-select">
                            <option value="0">üë§ Human</option>
                            <option value="1">ü§ñ Computer (AI)</option>
                        </select>
                    </div>
                </div>
            </div>
            
            <div class="card mb-3 border-primary player-card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">üîµ Player 2 (Blue)</h5>
                </div>
                <div class="card-body">
                    <div class="form-group mb-3">
                        <label asp-for="Player2Name" class="control-label">Name</label>
                        <input asp-for="Player2Name" class="form-control" placeholder="Enter player 2 name" />
                        <span asp-validation-for="Player2Name" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mb-0">
                        <label asp-for="P2Type" class="control-label">Player Type</label>
                        <select asp-for="P2Type" class="form-select">
                            <option value="0">üë§ Human</option>
                            <option value="1">ü§ñ Computer (AI)</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row mt-4">
        <div class="col-12 text-center">
            <button type="submit" class="btn btn-success btn-lg px-5">
                üöÄ Start Game
            </button>
            <a href="/" class="btn btn-secondary btn-lg px-5">
                ‚ùå Cancel
            </a>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}