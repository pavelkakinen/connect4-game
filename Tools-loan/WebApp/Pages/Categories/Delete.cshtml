@page "{id:int}"
@model WebApp.Pages.Categories.DeleteModel
@{
    ViewData["Title"] = "Delete Category";
}

<h1>Delete Category</h1>

<h3>Are you sure you want to delete this?</h3>

<div asp-validation-summary="All" class="text-danger"></div>

@if (Model.ToolCount > 0)
{
    <div class="alert alert-warning">
        <strong>Warning:</strong> This category has @Model.ToolCount tool(s) assigned to it.
        You must reassign or delete these tools before deleting this category.
    </div>
}

<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Category.Name</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Category.Description</dd>
        <dt class="col-sm-2">Tools</dt>
        <dd class="col-sm-10">@Model.ToolCount</dd>
    </dl>

    <form method="post">
        <button type="submit" class="btn btn-danger" @(Model.ToolCount > 0 ? "disabled" : "")>Delete</button>
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
