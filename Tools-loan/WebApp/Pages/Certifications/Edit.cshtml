@page "{id:int}"
@model WebApp.Pages.Certifications.EditModel
@{
    ViewData["Title"] = "Edit Certification";
}

<h1>Edit Certification</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Certification.Id" />
            <div class="mb-3">
                <label asp-for="Certification.Name" class="form-label"></label>
                <input asp-for="Certification.Name" class="form-control" required />
                <span asp-validation-for="Certification.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Certification.Description" class="form-label"></label>
                <textarea asp-for="Certification.Description" class="form-control" rows="3"></textarea>
            </div>
            <div class="mb-3">
                <label asp-for="Certification.TrainingHoursRequired" class="form-label">Training Hours Required</label>
                <input asp-for="Certification.TrainingHoursRequired" class="form-control" type="number" step="0.5" min="0" max="1000" />
                <span asp-validation-for="Certification.TrainingHoursRequired" class="text-danger"></span>
                <div class="form-text">Must be 0 or greater</div>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-page="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
