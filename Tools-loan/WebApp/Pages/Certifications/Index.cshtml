@page
@model WebApp.Pages.Certifications.IndexModel
@{
    ViewData["Title"] = "Certifications";
}

<h1>Safety Certifications</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Add Certification</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Training Hours</th>
            <th>Tools Requiring</th>
            <th>Certified Members</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Certifications)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.TrainingHoursRequired hrs</td>
                <td>@item.Tools.Count</td>
                <td>@item.MemberCertifications.Count(mc => mc.IsValid)</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
