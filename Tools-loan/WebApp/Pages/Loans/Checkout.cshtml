@page
@model WebApp.Pages.Loans.CheckoutModel
@{
    ViewData["Title"] = "Checkout Tool";
}

<h1>Checkout Tool</h1>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="MemberId" class="form-label">Member</label>
                <select asp-for="MemberId" class="form-select" asp-items="Model.MemberList">
                    <option value="">Select a member...</option>
                </select>
                <span asp-validation-for="MemberId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ToolId" class="form-label">Tool</label>
                <select asp-for="ToolId" class="form-select" asp-items="Model.ToolList">
                    <option value="">Select a tool...</option>
                </select>
                <span asp-validation-for="ToolId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DueDate" class="form-label">Due Date</label>
                <input asp-for="DueDate" class="form-control" type="date" />
                <span asp-validation-for="DueDate" class="text-danger"></span>
                <div class="form-text">Default loan period will be applied when you select a tool</div>
            </div>

            <div class="mb-3">
                <label asp-for="Notes" class="form-label">Notes</label>
                <textarea asp-for="Notes" class="form-control" rows="2"></textarea>
            </div>

            <button type="submit" class="btn btn-primary">Checkout</button>
            <a asp-page="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
