@page
@model WebApp.Pages.Loans.HistoryModel
@using Domain.Enums
@{
    ViewData["Title"] = "Loan History";
}

<h1>Loan History</h1>

<p>
    <a asp-page="Index" class="btn btn-outline-primary">Active Loans</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Tool</th>
            <th>Member</th>
            <th>Checkout</th>
            <th>Due</th>
            <th>Returned</th>
            <th>Condition</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var loan in Model.Loans)
        {
            <tr>
                <td><a asp-page="/Tools/Details" asp-route-id="@loan.ToolId">@loan.Tool.Name</a></td>
                <td><a asp-page="/Members/Details" asp-route-id="@loan.MemberId">@loan.Member.FullName</a></td>
                <td>@loan.CheckoutDate.ToString("d")</td>
                <td>@loan.DueDate.ToString("d")</td>
                <td>@loan.ReturnDate?.ToString("d")</td>
                <td>
                    @if (loan.ReturnCondition.HasValue)
                    {
                        @if (loan.ReturnCondition == LoanCondition.Good)
                        {
                            <span class="badge bg-success">Good</span>
                        }
                        else if (loan.ReturnCondition == LoanCondition.MinorWear)
                        {
                            <span class="badge bg-info">Minor Wear</span>
                        }
                        else if (loan.ReturnCondition == LoanCondition.Damaged)
                        {
                            <span class="badge bg-danger">Damaged</span>
                        }
                        else
                        {
                            <span class="badge bg-dark">Lost</span>
                        }
                    }
                </td>
                <td>
                    @if (loan.WasLate)
                    {
                        <span class="badge bg-warning">Late</span>
                    }
                    else
                    {
                        <span class="badge bg-success">On Time</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
