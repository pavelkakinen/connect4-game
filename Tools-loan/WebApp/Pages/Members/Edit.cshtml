@page "{id:int}"
@model WebApp.Pages.Members.EditModel
@using Domain.Enums
@{
    ViewData["Title"] = "Edit Member";
}

<h1>Edit Member</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Member.Id" />
            <input type="hidden" asp-for="Member.JoinDate" />

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="Member.FirstName" class="form-label"></label>
                    <input asp-for="Member.FirstName" class="form-control" />
                    <span asp-validation-for="Member.FirstName" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Member.LastName" class="form-label"></label>
                    <input asp-for="Member.LastName" class="form-control" />
                    <span asp-validation-for="Member.LastName" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Member.Email" class="form-label"></label>
                <input asp-for="Member.Email" class="form-control" type="email" />
                <span asp-validation-for="Member.Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Member.Phone" class="form-label"></label>
                <input asp-for="Member.Phone" class="form-control" type="tel" />
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="Member.Status" class="form-label"></label>
                    <select asp-for="Member.Status" class="form-select" asp-items="Html.GetEnumSelectList<MemberStatus>()"></select>
                </div>
                <div class="col-md-6">
                    <label asp-for="Member.SuspensionEndDate" class="form-label"></label>
                    <input asp-for="Member.SuspensionEndDate" class="form-control" type="date" />
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Member.SuspensionReason" class="form-label"></label>
                <input asp-for="Member.SuspensionReason" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-page="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
