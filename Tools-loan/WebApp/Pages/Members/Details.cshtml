@page "{id:int}"
@model WebApp.Pages.Members.DetailsModel
@using Domain.Enums
@{
    ViewData["Title"] = Model.Member.FullName;
}

<h1>@Model.Member.FullName</h1>

<div class="row">
    <div class="col-md-6">
        <div class="card mb-3">
            <div class="card-header">Member Information</div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4">Email</dt>
                    <dd class="col-sm-8">@Model.Member.Email</dd>

                    <dt class="col-sm-4">Phone</dt>
                    <dd class="col-sm-8">@(Model.Member.Phone ?? "N/A")</dd>

                    <dt class="col-sm-4">Member Since</dt>
                    <dd class="col-sm-8">@Model.Member.JoinDate.ToString("d")</dd>

                    <dt class="col-sm-4">Status</dt>
                    <dd class="col-sm-8">
                        @if (Model.Member.Status == MemberStatus.Active)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else if (Model.Member.Status == MemberStatus.Suspended)
                        {
                            <span class="badge bg-warning">Suspended</span>
                            @if (Model.Member.SuspensionEndDate.HasValue)
                            {
                                <span> until @Model.Member.SuspensionEndDate.Value.ToString("d")</span>
                            }
                            @if (!string.IsNullOrEmpty(Model.Member.SuspensionReason))
                            {
                                <br /><small class="text-muted">Reason: @Model.Member.SuspensionReason</small>
                            }
                        }
                        else
                        {
                            <span class="badge bg-secondary">Expired</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>

        <div class="card mb-3">
            <div class="card-header">Statistics</div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-6">Total Loans</dt>
                    <dd class="col-sm-6">@Model.TotalLoans</dd>

                    <dt class="col-sm-6">Late Returns (past year)</dt>
                    <dd class="col-sm-6">
                        @if (Model.LateReturnsThisYear >= 3)
                        {
                            <span class="badge bg-danger">@Model.LateReturnsThisYear</span>
                            <span class="text-danger">(suspension warning)</span>
                        }
                        else
                        {
                            <span>@Model.LateReturnsThisYear</span>
                        }
                    </dd>

                    <dt class="col-sm-6">Damage Reports</dt>
                    <dd class="col-sm-6">@Model.DamageCount</dd>
                </dl>
            </div>
        </div>

        @if (Model.Certifications.Any())
        {
            <div class="card mb-3">
                <div class="card-header">Certifications</div>
                <ul class="list-group list-group-flush">
                    @foreach (var cert in Model.Certifications)
                    {
                        <li class="list-group-item d-flex justify-content-between">
                            <span>@cert.Certification.Name</span>
                            <span class="@(cert.IsValid ? "" : "text-danger")">
                                @if (cert.ExpirationDate.HasValue)
                                {
                                    @(cert.IsValid ? "Expires" : "Expired") @cert.ExpirationDate.Value.ToString("d")
                                }
                                else
                                {
                                    <span class="text-muted">No expiration</span>
                                }
                            </span>
                        </li>
                    }
                </ul>
            </div>
        }
    </div>

    <div class="col-md-6">
        <div class="card mb-3">
            <div class="card-header">Current Loans (@Model.ActiveLoans.Count)</div>
            <ul class="list-group list-group-flush">
                @foreach (var loan in Model.ActiveLoans)
                {
                    <li class="list-group-item @(loan.IsOverdue ? "list-group-item-danger" : "")">
                        <div class="d-flex justify-content-between">
                            <a asp-page="/Tools/Details" asp-route-id="@loan.ToolId">@loan.Tool.Name</a>
                            <span>Due: @loan.DueDate.ToString("d")
                                @if (loan.IsOverdue)
                                {
                                    <span class="badge bg-danger">OVERDUE</span>
                                }
                            </span>
                        </div>
                    </li>
                }
                @if (!Model.ActiveLoans.Any())
                {
                    <li class="list-group-item text-muted">No active loans</li>
                }
            </ul>
        </div>

        <div class="card">
            <div class="card-header">Loan History</div>
            <ul class="list-group list-group-flush">
                @foreach (var loan in Model.RecentLoans)
                {
                    <li class="list-group-item">
                        <div class="d-flex justify-content-between">
                            <span>@loan.Tool.Name</span>
                            <small class="text-muted">@loan.CheckoutDate.ToString("d") - @loan.ReturnDate?.ToString("d")</small>
                        </div>
                        @if (loan.WasLate)
                        {
                            <span class="badge bg-warning">Late</span>
                        }
                        @if (loan.ReturnCondition == LoanCondition.Damaged)
                        {
                            <span class="badge bg-danger">Damaged</span>
                        }
                    </li>
                }
                @if (!Model.RecentLoans.Any())
                {
                    <li class="list-group-item text-muted">No loan history</li>
                }
            </ul>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-page="./Edit" asp-route-id="@Model.Member.Id" class="btn btn-primary">Edit</a>
    <a asp-page="/Loans/Checkout" asp-route-memberId="@Model.Member.Id" class="btn btn-success">New Checkout</a>
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</div>
